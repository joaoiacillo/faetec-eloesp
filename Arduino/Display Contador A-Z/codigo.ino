/*** Configuration ***/

void setup()
{
	for (i = 0; i < 7; i++)
	{
		pinMode(linhas[i], OUTPUT);
		digitalWrite(linhas[i], LOW);
	}
	
	for (j = 0; j < 5; j++)
	{
		pinMode(colunas[j], OUTPUT);
		digitalWrite(colunas[j], HIGH);
	}
}

/*** Functions ***/

void turnOffLine()
{
	for (j = 0; j < 5; j++) digitalWrite(colunas[j], HIGH);
	digitalWrite(linhas[i], LOW);
}

/*** Program ***/

void loop()
{
	// Para cada simbolo
	for (s = 0; s < 26; s++)
	{
		for (r = 0; r < 20; r++)
		{
			// Para cada linha
			for (i = 0; i < 7; i++)
			{
				digitalWrite(linhas[i], HIGH);
			
				// Para cada coluna
				for (j = 0; j < 5; j++)
				{
					int bit = bitRead(symbols[s][i], 4 - j);
					digitalWrite(colunas[j], !bit);
				}
				
				delay(5);
				turnOffLine();
			}
		}
	}
}
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	